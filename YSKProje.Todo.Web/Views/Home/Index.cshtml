@model AppUserSignInModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}


<form class="w-50 mx-auto mt-5 p-4 shadow" asp-action="GirisYap" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Username" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-check">
        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <a asp-action="KayitOl" class="btn btn-sm btn-primary">Kayıt Ol</a>
    <input type="submit" class="btn btn-sm btn-info" value="Giriş Yap" />
</form>
